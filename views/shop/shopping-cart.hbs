{{# if products }}
<div id="cart-list">
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">

        {{# each products}}
        <li id="table-item-{{ this.item._id }}" class="list-group-item">
          <span id="cart-badge-{{ this.item._id }}" class="badge">{{ this.qty }}</span>
          <strong>{{ this.item.title }}</strong>
          <span id="item-price" class="label label-success">$<span>{{ this.item.price }}</span></span>
          <div class="btn-group">
            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a id="{{ this.item._id }}" class="btn-reduce">Reduce by 1</a></li>
              <li><a id="{{ this.item._id }}" class="btn-remove">Remove All</a></li>
              <!-- <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li> -->
              <!-- <li><a href="/remove/{{this.item._id}}">Remove All</a></li> -->
            </ul>
          </div>
        </li>
        {{/each}}

      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 cold-md-6 col-md-offset-3 col-sm-offset-3">
      <p id="total-price"><strong>Total: <span>{{ totalPrice }}</span></strong></p>
    </div>
  </div>

  <div class="row btn-checkout">
    <div class="col-sm-6 cold-md-6 col-md-offset-3 col-sm-offset-3">
      <a id="btn-checkout" type="button" class="btn btn-success">Checkout</a>
      <!-- <a href="/checkout" type="button" class="btn btn-success">Checkout</a> -->
    </div>
  </div>
</div>

{{ else }}

<div class="row">
  <div class="col-sm-6 cold-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>No items in Cart</h2>
  </div>
</div>

{{/if}}
