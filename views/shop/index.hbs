

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success-bought" class="alert alert-success hidden">
      <p>Compra realizada com sucesso!</p>
    </div>
  </div>
</div>

{{# each products }}
<div class="row">
  {{# each this }}
      <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
              <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
              <div class="caption">
                  <h3>{{ this.title }}</h3>
                  <p class="description">{{ this.description }}</p>
                  <div class="clearfix">
                      <div class="price pull-left">${{ this.price }}</div>
                      <a id="{{ this.id }}" class="btn btn-info pull-right btn-buy" role="button">Comprar</a>
                      <!-- <a href="/add-to-cart/{{ this.id }}" class="btn btn-info pull-right" role="button">Buy</a> -->
                  </div>
              </div>
          </div>
      </div>
  {{/each}}
</div>
{{/each}}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Meu Carrinho de Compras</h4>
      </div>
      <div class="modal-body">

        <div id="cart-list">
          <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
              <ul id="cart-ul" class="list-group">
                {{# if productsCart }}

                {{# each productsCart }}
                  <li id="table-item-{{ this.item._id }}" class="list-group-item">
                    <span id="cart-badge-{{ this.item._id }}" class="badge">{{ this.qty }}</span>
                    <strong>{{ this.item.title }}</strong>
                    <span id="item-price" class="label label-success">R$<span>{{ this.item.price }}</span></span>
                    <div class="btn-group">
                      <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Ação <span class="caret"></span></button>
                      <ul class="dropdown-menu">
                        <li><a id="{{ this.item._id }}" class="btn-reduce">Remover 1 unidade</a></li>
                        <li><a id="{{ this.item._id }}" class="btn-remove">Remover todos</a></li>
                      </ul>
                    </div>
                  </li>
                {{/each}}

              </ul>
            </div>
          </div>


        </div>

        {{ else }}

            <h2>Nenhum item no carrinho de compras</h2>
        </div>

        {{/if}}

        <div class="row cart-total-price">
          <div id="total-cart-price" class="col-sm-6 cold-md-6 col-md-offset-3 col-sm-offset-3">
            <p id="total-price"><strong>Total: <span>R$ {{ totalPrice }}</span></strong></p>
          </div>
        </div>

      </div>
      <div id="cart-footer" class="modal-footer">

        <div class="row">
          <div id="btns-cart-modal" class="col-sm-6 cold-md-6 col-md-offset-6 col-sm-offset-6">
            <button id="btn-close-modal" type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            {{# if productsCart }}
            <a id="btn-checkout" type="button" class="btn btn-success">Prosseguir Compra</a>
            {{/if}}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
